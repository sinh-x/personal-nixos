// Niri configuration
// Matches keybindings from Hyprland setup

// Input configuration
input {
    keyboard {
        xkb {
            layout "us"
        }
        repeat-delay 600
        repeat-rate 25
    }

    touchpad {
        tap
        // natural-scroll
        accel-speed 0.2
        accel-profile "adaptive"
    }

    mouse {
        accel-speed 0.0
        accel-profile "flat"
    }

    // Focus follows mouse
    focus-follows-mouse max-scroll-amount="0%"
}

// Output/monitor configuration
// Auto-detect monitors by default
output "eDP-1" {
    // mode "3840x2400@60"
    scale 1.0
    // position x=0 y=0
}

// Layout configuration
layout {
    gaps 10

    center-focused-column "never"

    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    focus-ring {
        width 2
        active-color "#EEB48A"
        inactive-color "#4e2510"
    }

    border {
        width 2
        active-color "#E4A85F"
        inactive-color "#642f13"
    }

    struts {
        // left 0
        // right 0
        // top 0
        // bottom 0
    }
}

// Cursor settings
cursor {
    xcursor-theme "Sweet"
    xcursor-size 16
}

// Hotkey overlay - show available bindings
hotkey-overlay {
    skip-at-startup
}

// Environment variables
environment {
    DISPLAY ":0"
    QT_QPA_PLATFORM "wayland"
    QT_WAYLAND_DISABLE_WINDOWDECORATION "1"
    XDG_CURRENT_DESKTOP "niri"
    XDG_SESSION_TYPE "wayland"
    XDG_SESSION_DESKTOP "niri"
    NIXOS_OZONE_WL "1"
}

// Window rules
window-rule {
    match app-id="pavucontrol"
    open-floating true
}

window-rule {
    match app-id="nm-connection-editor"
    open-floating true
}

window-rule {
    match app-id="blueman-manager"
    open-floating true
}

window-rule {
    match app-id="yad"
    open-floating true
}

window-rule {
    match app-id="Viewnior"
    open-floating true
}

window-rule {
    match app-id="feh"
    open-floating true
}

window-rule {
    match app-id="copyq"
    open-floating true
}

window-rule {
    match app-id="gnome-calculator"
    open-floating true
}

window-rule {
    match title="File Operation Progress"
    open-floating true
}

// Keybindings
binds {
    // Terminal
    Mod+Return { spawn "ghostty"; }
    Mod+T { spawn "ghostty"; }

    // App launcher (rofi)
    Mod+D { spawn "bash" "-c" "~/.config/niri/scripts/rofi_launcher"; }
    Alt+F2 { spawn "bash" "-c" "~/.config/niri/scripts/rofi_runner"; }

    // Rofi menus
    Mod+R { spawn "bash" "-c" "~/.config/niri/scripts/rofi_asroot"; }
    Mod+M { spawn "bash" "-c" "~/.config/niri/scripts/rofi_music"; }
    Mod+N { spawn "bash" "-c" "~/.config/niri/scripts/rofi_network"; }
    Mod+B { spawn "bash" "-c" "~/.config/niri/scripts/rofi_bluetooth"; }
    Mod+X { spawn "bash" "-c" "~/.config/niri/scripts/rofi_powermenu"; }
    Mod+A { spawn "bash" "-c" "~/.config/niri/scripts/rofi_screenshot"; }

    // Apps
    Mod+Shift+F { spawn "thunar"; }
    Mod+Shift+W { spawn "zen-twilight"; }

    // Window management
    Mod+C { close-window; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }
    Mod+Space { toggle-window-floating; }
    Mod+Shift+Space { switch-focus-between-floating-and-tiling; }

    // Focus navigation (Niri uses columns)
    Mod+Left { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Up { focus-window-up; }
    Mod+Down { focus-window-down; }

    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    Mod+J { focus-window-down; }
    Mod+K { focus-window-up; }

    // Move windows
    Mod+Shift+Left { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Up { move-window-up; }
    Mod+Shift+Down { move-window-down; }

    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    Mod+Shift+J { move-window-down; }
    Mod+Shift+K { move-window-up; }

    // Resize windows
    Mod+Ctrl+Left { set-column-width "-10%"; }
    Mod+Ctrl+Right { set-column-width "+10%"; }
    Mod+Ctrl+Up { set-window-height "-10%"; }
    Mod+Ctrl+Down { set-window-height "+10%"; }

    Mod+Ctrl+H { set-column-width "-10%"; }
    Mod+Ctrl+L { set-column-width "+10%"; }
    Mod+Ctrl+J { set-window-height "+10%"; }
    Mod+Ctrl+K { set-window-height "-10%"; }

    // Column width presets
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }

    // Consume/expel windows (like swallowing)
    Mod+BracketLeft { consume-window-into-column; }
    Mod+BracketRight { expel-window-from-column; }

    // Switch between windows in column
    Mod+Tab { focus-window-down-or-column-right; }
    Mod+Shift+Tab { focus-window-up-or-column-left; }

    // Workspaces 1-10
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+0 { focus-workspace 10; }

    // Move window to workspace
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }
    Mod+Shift+0 { move-column-to-workspace 10; }

    // Workspace navigation
    Ctrl+Alt+Left { focus-workspace-up; }
    Ctrl+Alt+Right { focus-workspace-down; }
    Ctrl+Alt+Shift+Left { move-column-to-workspace-up; }
    Ctrl+Alt+Shift+Right { move-column-to-workspace-down; }

    // Monitor focus
    Mod+Shift+Equal { move-column-to-monitor-right; }
    Mod+Ctrl+Shift+Left { move-column-to-monitor-left; }
    Mod+Ctrl+Shift+Right { move-column-to-monitor-right; }

    // Screenshots
    Print { screenshot; }
    Mod+Print { screenshot; }
    Ctrl+Print { screenshot-window; }
    Shift+Print { screenshot-screen; }

    // Volume control
    XF86AudioRaiseVolume allow-when-locked=true { spawn "bash" "-c" "~/.config/niri/scripts/volume --inc"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "bash" "-c" "~/.config/niri/scripts/volume --dec"; }
    XF86AudioMute allow-when-locked=true { spawn "bash" "-c" "~/.config/niri/scripts/volume --toggle"; }
    XF86AudioMicMute allow-when-locked=true { spawn "bash" "-c" "~/.config/niri/scripts/volume --toggle-mic"; }

    // Brightness control
    XF86MonBrightnessUp allow-when-locked=true { spawn "bash" "-c" "~/.config/niri/scripts/brightness --inc"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "bash" "-c" "~/.config/niri/scripts/brightness --dec"; }

    // Media control
    XF86AudioNext allow-when-locked=true { spawn "mpc" "next"; }
    XF86AudioPrev allow-when-locked=true { spawn "mpc" "prev"; }
    XF86AudioPlay allow-when-locked=true { spawn "mpc" "toggle"; }
    XF86AudioStop allow-when-locked=true { spawn "mpc" "stop"; }

    // Color picker
    Mod+P { spawn "bash" "-c" "~/.config/niri/scripts/colorpicker"; }

    // Clipboard history
    Ctrl+Grave { spawn "bash" "-c" "cliphist list | rofi -dmenu | cliphist decode | wl-copy"; }

    // Session management
    Ctrl+Alt+Delete { quit; }

    // Power button
    Mod+Shift+P { spawn "bash" "-c" "~/.config/niri/scripts/rofi_powermenu"; }
}

// Mouse bindings for window management
binds {
    Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp cooldown-ms=150 { focus-workspace-up; }
    Mod+Shift+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Shift+WheelScrollUp cooldown-ms=150 { move-column-to-workspace-up; }

    // Touchpad gestures
    Mod+TouchpadScrollDown { focus-workspace-down; }
    Mod+TouchpadScrollUp { focus-workspace-up; }
}

// Startup applications
spawn-at-startup "waybar"
spawn-at-startup "mako"
spawn-at-startup "swaybg" "-i" "~/.config/niri/wallpapers/wallpaper.png" "-m" "fill"
spawn-at-startup "wl-paste" "--type" "text" "--watch" "cliphist" "store"
spawn-at-startup "wl-paste" "--type" "image" "--watch" "cliphist" "store"
spawn-at-startup "fcitx5"

// Animations
animations {
    // Uncomment to disable all animations
    // off

    slowdown 1.0

    workspace-switch {
        spring damping-ratio=1.0 stiffness=1000 epsilon=0.0001
    }

    window-open {
        duration-ms 150
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 150
        curve "ease-out-quad"
    }

    horizontal-view-movement {
        spring damping-ratio=1.0 stiffness=800 epsilon=0.0001
    }

    window-movement {
        spring damping-ratio=1.0 stiffness=800 epsilon=0.0001
    }

    window-resize {
        spring damping-ratio=1.0 stiffness=800 epsilon=0.0001
    }

    config-notification-open-close {
        spring damping-ratio=0.6 stiffness=1000 epsilon=0.001
    }
}

// Screenshot settings
screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"
